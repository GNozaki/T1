<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tcc"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="15" />

    <application
        android:name="com.example.tcc.GlobalStateApp"        
        android:label="@string/app_name"
        android:icon="@drawable/ic_action_icone"
        android:theme="@android:style/Theme.Holo" >
        <activity
            android:name=".MainMenuActivity"
            android:label="@string/title_activity_main_menu" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CasesListActivity"
            android:label="@string/title_activity_cases_list" >
        </activity>
        <activity
            android:name=".CaseDetailsActivity"
            android:label="@string/title_activity_case_details" >
        </activity>
    </application>

    <!-- Allow to connect with internet -->
    

</manifest>